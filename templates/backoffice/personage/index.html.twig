{% extends 'base.html.twig' %}

{% block title %}Liste des Personnages{% endblock %}

{% block body %}
    <h1>Liste des personnages</h1>

    <a href="{{ path('app_backoffice_personage_new') }}"class="btn btn-primary">Cr√©er un nouveau paersonnage</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Description de l'image</th>
                <th>Description du personnage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personage in personages %}
            <tr>
                <td>{{ personage.id }}</td>
                <td>{{ personage.name }}</td>
                <td>{{ personage.picture }}</td>
                <td>{{ personage.descriptionPicture }}</td>
                <td>{{ personage.description }}</td>
                <td>
                    <a href="{{ path('app_backoffice_personage_read', {'id': personage.id}) }}"class="btn btn-success" >voir</a>
                    <a href="{{ path('app_backoffice_personage_edit', {'id': personage.id}) }}" class="btn btn-warning">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
